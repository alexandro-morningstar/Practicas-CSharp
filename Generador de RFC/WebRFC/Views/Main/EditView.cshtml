@using Entities
@model E_RFC

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/CSS/Reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.js" rel="stylesheet" />
    <link href="~/CSS/EditStyles.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/aca4f49d6f.js" crossorigin="anonymous"></script>
    <title>Editar Registro</title>
</head>
<body>
    <header>
        <nav class="navbar fixed-top">
            <div class="container-fluid">
                <form action="/Main/GoToDelete?id=@Model.IdRFC" method="post">
                    <button class="btn btn-outline-danger ms-5">
                        Eliminar <i class="fa-solid fa-delete-left"></i>
                    </button>
                </form>
                <p class="navbar-brand ms-5" style="color: white;">Confirmar acción</p>
                <form action="/Main/GoToRecords" method="post">
                    <button type="submit" class="btn btn-outline-info me-5">
                        <i class="fa-solid fa-arrow-left"></i> Regresar
                    </button>
                </form>
            </div>
        </nav>
    </header>
    <main>
        <h2 class="mb-3">Editar registro</h2>
        <form action="/Main/Edit" method="post">
            <input type="hidden" name="IdRFC" value="@Model.IdRFC" />
            <input type="hidden" name="RFC" value="@Model.RFC" />
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="Name">Nombre(s):</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="Name" value="@Model.Name" required />
                </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="PaternalSurname">Apellido Paterno:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="PaternalSurname" value="@Model.PaternalSurname" required />
                </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="MaternalSurname">Apellido Materno:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="MaternalSurname" value="@Model.MaternalSurname" />
                </div>
            </div>
            <div class="mb-3 row align-items-center">
                <div class="col-sm-4">
                    <label class="col-form-label" for="BirthDate">Fecha de Nacimiento:</label>
                </div>
                <div class="col-sm-8">
                    <input class="form-control" type="datetime" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" required />
                </div>
            </div>
            <div class="container-fluid">
                <div class="form-check form-switch mt-2 d-flex">
                    <label class="form-check-label me-auto" for="confirmationswitch">Sí, editar registro.</label>
                    <input id="confirmationswitch" type="checkbox" role="switch" name="confirmation" value="true" class="form-check-input" />
                    <button class="btn btn-outline-warning ms-auto">Confirmar Cambios</button>
                </div>
            </div>
        </form>
    </main>
</body>
</html>
